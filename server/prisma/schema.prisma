generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  role      Role     @default(ADMIN)
  createdAt DateTime @default(now())
}

model Slot {
  id        Int      @id @default(autoincrement())
  date      DateTime
  startTime String
  endTime   String
  isBooked  Boolean  @default(false)
  booking   Booking?
}

model Booking {
  id        Int      @id @default(autoincrement())
  name      String
  email     String
  phone     String
  slotId    Int      @unique
  slot      Slot     @relation(fields: [slotId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
}
